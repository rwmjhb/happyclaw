{
  "name": "happyclaw",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "phase0": "for f in phase0/0*.ts; do echo \"\\n=== Running $f ===\"; npx tsx \"$f\" || true; done"
  },
  "openclaw": {
    "extensions": [
      "./src/openclaw-plugin.ts"
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sinclair/typebox": "^0.34.48",
    "@xterm/headless": "^6.0.0",
    "node-pty": "^1.1.0",
    "strip-ansi": "^7.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "node-pty",
      "esbuild"
    ]
  }
}
